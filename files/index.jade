mixin index( title, text, what )
    doctype
    html
        include m-head
        +head(title)
        body
            #container
                include header
                +header( text, what )
                .main__container
                    .main__holder
                        include captcha-image
                        +captcha-image( '1' )
                        +captcha-image( '2' )
                        +captcha-image( '3' )
                        +captcha-image( '4' )
                        +captcha-image( '5' )
                        +captcha-image( '6' )
                        +captcha-image( '7' )
                        +captcha-image( '8' )
                        +captcha-image( '9' )

                include footer


